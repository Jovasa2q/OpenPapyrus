<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LAYOUT_ATTENDANCEPREREQ_ATTENDANCE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/CTL_ATTENDANCE_BACK_WARE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrowback">
                </ImageView>
                <TextView style="@style/FormText"
                    android:id="@+id/CTL_ATTENDANCE_WARE"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/CTL_ATTENDANCE_BACK_PRC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrowback">
                </ImageView>
                <TextView style="@style/FormText"
                    android:id="@+id/CTL_ATTENDANCE_PRC"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="40dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >
            <TextView style="@style/TSessDurationText"
                android:id="@+id/CTL_ATTENDANCE_DURATION"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                />
            <View style="@style/FakeView"/>
            <TextView
                android:id="@+id/CTL_ATTENDANCE_PRICE"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/TextPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >
            <!--<View style="@style/FakeView"/>-->
            <ImageView
                android:id="@+id/CTL_PREV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_triangleleft03">
            </ImageView>
            <TextView
                android:id="@+id/CTL_ATTENDANCE_DATE"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="40dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/TextPrimary"
                />
            <ImageView
                android:id="@+id/CTL_NEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_triangleright03">
            </ImageView>
        </LinearLayout>
        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <LinearLayout android:background="@drawable/shape_viewframe" android:layout_margin="2dp" android:layout_height="20dp" android:layout_width="48dp"/>
            <LinearLayout android:background="@drawable/shape_viewframe" android:layout_margin="2dp" android:layout_height="20dp" android:layout_width="0dp" android:layout_weight="1"/>
            <LinearLayout android:background="@drawable/shape_viewframe" android:layout_margin="2dp" android:layout_height="20dp" android:layout_width="0dp" android:layout_weight="1"/>
            <LinearLayout android:background="@drawable/shape_viewframe" android:layout_margin="2dp" android:layout_height="20dp" android:layout_width="0dp" android:layout_weight="1"/>
            <LinearLayout android:background="@drawable/shape_viewframe" android:layout_margin="2dp" android:layout_height="20dp" android:layout_width="0dp" android:layout_weight="1"/>
        </LinearLayout>
        -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendancePrereqAttendanceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pageheader"
            android:padding="2dp"
            layoutManager="LinearLayoutManager" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_viewframe">>
            <TextView style="@style/HintText"
                android:id="@+id/CTL_ATTENDANCE_HINT_GOTOORDER"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/CTL_ATTENDANCE_HINT_GOTOORDER_ARROW"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrowforward">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>