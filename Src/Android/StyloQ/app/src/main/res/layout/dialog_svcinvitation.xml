<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DLG_SVCINVITATION"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >
    <ImageView
        android:id="@+id/CTLIMG_SVCINVITATION_QRCODE"
        android:layout_width="@dimen/invitationqrcodeside"
        android:layout_height="@dimen/invitationqrcodeside"
        android:layout_margin="32dp"
        >
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        >
        <TextView
            android:id="@+id/CTL_SVCINVITATION_HINT"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLines="10"
            android:layout_margin="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <!--
        <ImageButton style="@style/ImagePushButton" android:id="@+id/STDCTL_DELETEBUTTON"
            android:gravity="left"
            app:srcCompat="@drawable/ic_deletefile02"
            android:text="@{but_delete}" />
        -->
        <Button style="@style/PushButton" android:id="@+id/STDCTL_CLOSEBUTTON" android:text="@{but_close}" />
    </LinearLayout>
</LinearLayout>