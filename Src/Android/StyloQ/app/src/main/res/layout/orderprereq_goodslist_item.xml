<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ListItemRegular" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderPrereqGoodsListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/LVITEM_GENERICNAME"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/PrimaryText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View style="@style/FakeView"/>
        <TextView
            android:id="@+id/ORDERPREREQ_GOODS_PRICE"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/Accent"
            />
        <TextView
            android:id="@+id/ORDERPREREQ_GOODS_REST"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/PrimaryText"
            />
        <Button
            android:id="@+id/buttonOrder"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:minHeight="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:textAlignment="viewEnd"
            android:background="@color/PrimaryDark"
            android:textColor="@color/White"
            android:onClick="OnButtonClk"
            />
    </LinearLayout>
</LinearLayout>