<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ListItemRegular"
    android:id="@+id/LAYOUT_TRANSFERITEM_GENERIC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/CTL_TI_ITEMN"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:textColor="@color/TextPrimary"
            />
        <TextView
            android:id="@+id/CTL_TI_GOODSNAME"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:textColor="@color/TextPrimary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View style="@style/FakeView"/>
        <TextView
            android:id="@+id/CTL_TI_QTTY"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="40dp"
            android:textSize="12sp"
            android:textFontWeight="600"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/TextPrimary"
            />
        <TextView
            android:id="@+id/CTL_TI_PRICE"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="40dp"
            android:textSize="12sp"
            android:textFontWeight="600"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/TextPrimary"
            />
        <TextView
            android:id="@+id/CTL_TI_AMOUNT"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="40dp"
            android:textSize="14sp"
            android:textFontWeight="600"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/Accent"
            />
    </LinearLayout>
</LinearLayout>