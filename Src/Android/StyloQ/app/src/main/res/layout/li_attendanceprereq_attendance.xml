<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ListItemRegular" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attendancePrereqAttendanceItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/LVITEM_HOUR"
        android:layout_height="wrap_content"
        android:layout_width="48dp"
        android:layout_margin="2dp"
        android:textColor="@color/TextPrimary"
        android:textSize="11sp"
        android:textFontWeight="700"
        android:gravity="center_horizontal|center_vertical"
        />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp">
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN00" android:text="00"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN05" android:text="05"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN10" android:text="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp">
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN15" android:text="15"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN20" android:text="20"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN25" android:text="25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp">
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN30" android:text="30"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN35" android:text="35"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN40" android:text="40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp">
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN45" android:text="45"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN50" android:text="50"/>
        <TextView style="@style/AttendanceMinutCell" android:id="@+id/LVITEM_MIN55" android:text="55"/>
    </LinearLayout>
    <TextView
        android:id="@+id/LVITEM_ATTENDANCE_TAIL"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/TextPrimary"
        />
</LinearLayout>