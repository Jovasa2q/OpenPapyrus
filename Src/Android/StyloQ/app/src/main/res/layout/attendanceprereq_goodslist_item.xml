<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ListItemRegular" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attendancePrereqGoodsListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ATTENDANCEPREREQ_GOODS_EXPANDSTATUS"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_triangleleft03">
        </ImageView>
        <TextView
            android:id="@+id/LVITEM_GENERICNAME"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/PrimaryText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View style="@style/FakeView"/>
        <TextView
            android:id="@+id/ATTENDANCEPREREQ_GOODS_PRICE"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:layout_marginRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/Accent"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/processorByWareListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        >
    </ListView>
</LinearLayout>