<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/ListItemRegular" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/LVITEM_IMG"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView style="@style/GenericListItemText"
            android:id="@+id/LVITEM_SVCNAME"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <!--
        <View style="@style/FakeView"/>
        -->
        <ImageButton style="@style/ToolbarButton" android:id="@+id/buttonInfo"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_info01"
            >
        </ImageButton>
    </LinearLayout>
</FrameLayout>
