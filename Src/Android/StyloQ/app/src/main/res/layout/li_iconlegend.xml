<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ListItemRegular" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iconLegendItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/CTL_ICONLEGEND_ICON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
    </ImageView>
    <TextView style="@style/GenericListItemText"
        android:id="@+id/CTL_ICONLEGEND_TEXT"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
</LinearLayout>