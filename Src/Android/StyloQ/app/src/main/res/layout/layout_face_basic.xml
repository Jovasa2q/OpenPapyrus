<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LAYOUT_STQFACE_BASIC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
    <CheckBox
        android:id="@+id/CTL_STQFACE_VERIFIABLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{styloqface_fverifiable}"/>
    -->
    <RadioGroup
        android:id="@+id/CTL_STQFACE_VRF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/shape_viewframe">
        <RadioButton android:id="@+id/CTL_STQFACE_VRF_ARB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_margin="0dp"
            android:textSize="12sp"
            android:text="@{styloqface_varbitrary}"
            />
        <RadioButton android:id="@+id/CTL_STQFACE_VRF_ANON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="1dp"
            android:textSize="12sp"
            android:text="@{styloqface_vanonymous}"
            />
        <RadioButton android:id="@+id/CTL_STQFACE_VRF_VRF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="1dp"
            android:textSize="12sp"
            android:text="@{styloqface_vverifiable}"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_CN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@{styloqface_commonname}">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@{styloqface_name}">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_PATRONYMIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{styloqface_patronymic}" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_SURNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{styloqface_surname}" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_PHONE"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{phone}" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputLine"
            android:id="@+id/CTL_STQFACE_DOB"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{dateofbirth}" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>